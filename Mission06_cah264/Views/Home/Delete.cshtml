@{
    ViewData["Title"] = "Delete Movie";
}

@model FormResponse

<h2>Confirm Deletion</h2>
<h2>Are you sure you want to delete the record for @Model.Title year @Model.Year?</h2>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="ListMovies" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="MovieID" />
</form>
